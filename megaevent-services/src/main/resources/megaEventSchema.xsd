<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://ws.megaevent.pahlsoft.com" xmlns:tns="http://ws.megaevent.pahlsoft.com" xmlns:jaxb="http://java.sun.com/xml/ns/jaxb" jaxb:version="2.0">
 
     <xs:complexType name="event">
     	<xs:sequence>
     	    <xs:element minOccurs="1" name="id" type="xs:int"/>
     	    <xs:element minOccurs="1" name="eventStatus" type="tns:eventStatus"/> 
     	    <xs:element minOccurs="1" name="title" type="xs:string" />
			<xs:element minOccurs="1" name="description" type="xs:string" />
     	</xs:sequence>
     </xs:complexType>

	<xs:complexType name="task">
		<xs:sequence>
			<xs:element minOccurs="1" name="id" type="xs:int"/>
			<xs:element minOccurs="1" name="name" type="xs:string"/>
			<xs:element minOccurs="1" name="taskStatus" type="tns:taskStatus"/>
			<xs:element minOccurs="1" name="taskResult" type="tns:taskResult"/>
			<xs:element minOccurs="1" name="eventId" type="xs:int"/>
			<xs:element minOccurs="1" name="dependencyId" type="xs:int"/>
			<xs:element minOccurs="1" name="ownerId" type="xs:int"/>
			<xs:element minOccurs="1" name="activatorId" type="xs:int"/>
			<xs:element minOccurs="1" name="validatorId" type="xs:int"/>
			<xs:element minOccurs="1" name="role" type="tns:role"/>
			<xs:element minOccurs="1" name="description" type="xs:string"/>
			<xs:element minOccurs="1" name="changeControlNumber" type="xs:string"/>
			<xs:element minOccurs="1" name="changeControlStatus" type="tns:changeStatus"/>
			<xs:element minOccurs="1" name="assetName" type="xs:string"/>
		</xs:sequence>
	</xs:complexType>
	
	<!-- 	This SHOULD be an inventory system element -->
	<xs:complexType name="targetedItem">
		<xs:sequence>
					<xs:element minOccurs="1" name="id" type="xs:int"/>
					<xs:element minOccurs="1" name="assetName" type="xs:string"/>
					<xs:element minOccurs="1" name="assetType" type="tns:assetType"/>
		</xs:sequence>
	</xs:complexType>
	
	<xs:complexType name="person">
		<xs:sequence>
			<xs:element minOccurs="1" name="id" type="xs:int"/>
			<xs:element minOccurs="1" name="firstName" type="xs:string"/>
			<xs:element minOccurs="1" name="lastName" type="xs:string"/>
			<xs:element minOccurs="1" name="login" type="xs:string"/>
			<xs:element minOccurs="1" name="role" type="tns:role" />		
			<xs:element minOccurs="1" name="workPhone" type="xs:string"/>
			<xs:element minOccurs="1" name="cellPhone" type="xs:string"/>
			<xs:element minOccurs="0" name="pager" type="xs:string"/>		
		</xs:sequence>
	</xs:complexType>
	
	<xs:simpleType name="role">
		<xs:restriction base="xs:string">
			<xs:enumeration value="SYSADMIN" />
			<xs:enumeration value="DBA" />
			<xs:enumeration value="NETWORK_ENGINEER" />
			<xs:enumeration value="SAN_ENGINEER" />
			<xs:enumeration value="DEVELOPER" />
			<!-- //TODO: may need to have more or from a DB -->
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="eventStatus">
		<xs:restriction base="xs:string">
			<xs:enumeration value="RED" />
			<xs:enumeration value="AMBER" />
			<xs:enumeration value="GREEN" />
			<!-- //TODO: may need to have more or from a DB -->
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="changeStatus">
		<xs:restriction base="xs:string">
			<xs:enumeration value="ACTIVE" />
			<xs:enumeration value="APPROVED" />
			<xs:enumeration value="PENDING_APPROVAL" />
			<xs:enumeration value="COMPLETED" />
			<xs:enumeration value="CLOSED" />
			<xs:enumeration value="REJECTED" />
			<!-- //TODO: may need to have more or from a DB -->
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="taskStatus">
		<xs:restriction base="xs:string">
			<xs:enumeration value="ACTIVE" />
			<xs:enumeration value="PENDING" />
			<xs:enumeration value="COMPLETED" />
			<xs:enumeration value="DELETED" />
			<xs:enumeration value="OVERRIDE" />
			<xs:enumeration value="RETRY" />
			<!-- //TODO: may need to have more or from a DB -->
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="taskResult">
		<xs:restriction base="xs:string">
			<xs:enumeration value="NONE" />
			<xs:enumeration value="PASS" />
			<xs:enumeration value="FAIL" />
			<!-- //TODO: may need to have more or from a DB -->
		</xs:restriction>
	</xs:simpleType>
	
	<xs:simpleType name="assetType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="SERVER" />
			<xs:enumeration value="DATABASE_SERVER" />
			<xs:enumeration value="DATABASE" />
			<xs:enumeration value="APPLICATION_SERVER" />
			<xs:enumeration value="WEB_SERVER" />
			<xs:enumeration value="OPERATING_SYSTEM" />
			<!-- //TODO: may need to have more or from a DB -->
		</xs:restriction>
	</xs:simpleType>
	


</xs:schema>